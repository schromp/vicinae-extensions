{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "swww",
  "title": "swww",
  "description": "Set wallpapers using swww",
  "categories": [],
  "license": "MIT",
  "author": "schromp",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "commands": [
    {
      "name": "set-wallpaper",
      "title": "Set Wallpaper",
      "subtitle": "Set the wallpaper",
      "description": "Set the wallpaper",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "wallpaperPath",
      "title": "Wallpaper Path",
      "description": "The path containing the wallpaper images",
      "required": true,
      "type": "textfield"
    },
    {
      "name": "transitionType",
      "title": "Transition Type",
      "description": "The animation type of the transition",
      "required": true,
      "type": "dropdown",
      "data": [
        { "title": "None", "value": "none" },
        { "title": "Simple", "value": "simple" },
        { "title": "Fade", "value": "fade" },
        { "title": "Left", "value": "left" },
        { "title": "Right", "value": "right" },
        { "title": "Top", "value": "top" },
        { "title": "Bottom", "value": "bottom" },
        { "title": "Wipe", "value": "wipe" },
        { "title": "Wave", "value": "wave" },
        { "title": "Grow", "value": "grow" },
        { "title": "Center", "value": "center" },
        { "title": "Any", "value": "any" },
        { "title": "Outer", "value": "outer" },
        { "title": "Random", "value": "random" }
      ]
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop"
  },
  "dependencies": {
    "@vicinae/api": "^0.12.2"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
